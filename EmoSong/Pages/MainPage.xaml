<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EmoSong.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="0,20,0,0" FontAttributes="Bold" Text="Welcome to an automated song suggestion app!" XAlign="Center" VerticalOptions="Center" HorizontalOptions="Center" />
            <Button x:Name="PictureButton" Text="Take Picture" Clicked="btn_Clicked" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label x:Name="MessageLabel" Margin="0,20,0,0" FontAttributes="Bold" Text="We are analysing your emotion..." XAlign="Center" VerticalOptions="Center" HorizontalOptions="Center" IsVisible="false" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>